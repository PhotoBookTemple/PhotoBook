<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    android:background="@drawable/background2"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <!-- MOLLY -->

    <TextView
        android:id="@+id/chooseUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:orientation="vertical"
        android:text="Choose your username:"
        android:textColor="@color/gold"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/newUsername"
        android:layout_width="450dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:ems="10"
        android:inputType="text"
        android:textColor="@color/cream"
        android:textColorHint="@color/cream"
        android:textSize="25sp" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/password8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:text="Password (at least 6 characters):"
        android:textColor="@color/gold"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/newPassword"
        android:layout_width="450dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="@color/cream"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/confirmPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:text="Confirm password:"
        android:textColor="@color/gold"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/newPasswordConfirm"
        android:layout_width="450dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="@color/cream"
        android:textSize="25sp" />

    <Button
        android:id="@+id/signUpComplete"
        android:layout_width="184dp"
        android:layout_height="70dp"
        android:layout_marginBottom="130dp"
        android:layout_marginLeft="50dp"
        android:text="Sign me up!"
        android:textColor="@color/lightgold"
        android:textSize="30sp" />

</LinearLayout>